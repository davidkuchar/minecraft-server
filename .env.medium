# Medium Environment Configuration for 4GB EC2 Instance
APP_NAME=Pterodactyl
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=http://YOUR_EC2_IP_OR_DOMAIN

# Database Configuration
DB_HOST=database
DB_PORT=3306
DB_DATABASE=panel
DB_USERNAME=pterodactyl
DB_PASSWORD=CHANGE_TO_STRONG_PASSWORD
DB_ROOT_PASSWORD=CHANGE_TO_STRONG_ROOT_PASSWORD

# Redis Configuration
REDIS_HOST=cache
REDIS_PASSWORD=
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_DRIVER=redis

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=localhost
MAIL_PORT=25
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=

# Service Configuration
APP_SERVICE_AUTHOR=admin@yourdomain.com
LE_EMAIL=admin@yourdomain.com

# Hashids Configuration
HASHIDS_SALT=
HASHIDS_LENGTH=8

# Performance Tuning for 4GB Instance
# PHP Memory Limits
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=120
PHP_MAX_INPUT_VARS=5000

# Enhanced logging for better performance monitoring
LOG_LEVEL=info

# Queue Configuration for better performance
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database

# Session Configuration
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache TTLs
CACHE_PREFIX=pterodactyl_cache